<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" spacing="10.0" xmlns="http://javafx.com/javafx/10.0.2-internal"
      xmlns:fx="http://javafx.com/fxml/1" fx:controller="ui_controllers.DbFillController">

    <Label fx:id="fillQueueStatusView" text="Очередь файлов для разбора пуста" textAlignment="CENTER">
        <VBox.margin>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
        </VBox.margin>
    </Label>
    <Button fx:id="fillQueueButton" alignment="CENTER" mnemonicParsing="false" onAction="#fillFilesQueue"
            text="Обновить очередь файлов"/>
    <Label fx:id="parseFilesStatusView" visible="false"/>
    <Button fx:id="parseFilesButton" mnemonicParsing="false" text="Обработать файлы" onAction="#parseFiles"
            disable="true"/>
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
    </padding>
</VBox>