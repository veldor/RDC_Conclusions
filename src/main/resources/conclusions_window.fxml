<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.Cursor?>
<VBox xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ui_controllers.ConclusionsController">
    <TableView fx:id="conclusionsInWorkTable" style="-fx-selection-bar: #a5fce1;-fx-highlight-fill: lightgray;">
        <columns>
            <!-- Колонки таблицы -->
            <TableColumn fx:id="executionNumberColumn" text="№ обследования" />
            <TableColumn fx:id="personalsColumn" minWidth="120.0" prefWidth="-1.0" text="ФИО пациента" />
            <TableColumn fx:id="birthDateColumn" minWidth="20.0" prefWidth="-1.0" text="Дата рождения" />
            <TableColumn fx:id="sexColumn" minWidth="20.0" prefWidth="-1.0" text="Пол" />
            <TableColumn fx:id="executionAreaColumn" minWidth="100.0" prefWidth="-1.0" text="Область обследования" />
            <TableColumn fx:id="contrastColumn" prefWidth="-1.0" text="Контраст" />
            <TableColumn fx:id="executionDateColumn" prefWidth="-1.0" text="Дата обследования" />
            <TableColumn fx:id="doctorColumn" prefWidth="-1.0" text="Доктор" />
        </columns>
        <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
        </padding>
        <cursor>
            <Cursor fx:constant="DEFAULT" />
        </cursor>
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
        </columnResizePolicy>
    </TableView>
</VBox>
